{
    "manifest_version": 3,
    "name": "Ejournal 2.0",
    "version": "1.0",
    "action": {
        "default_icon": "icons/icon-32.png"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "alarms",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://e-journal.iea.gov.ua/*/schedule/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}